
    <androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"

        android:layout_height="match_parent"
        tools:context=".Fragments.ShopFragment">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_margin="15dp"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/imgf"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/bookpink" />

            <TextView
                android:id="@+id/tv1"
                android:layout_width="wrap_content"
                android:layout_height="39dp"
                android:layout_marginStart="9dp"
                android:layout_toEndOf="@id/imgf"
                android:text="Book - Women"
                android:textColor="@color/black"
                android:textSize="20sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tv2"
                android:layout_width="wrap_content"
                android:layout_height="39dp"
                android:text="Genre - Fantasy"
                android:layout_toEndOf="@id/imgf"
                android:layout_below="@id/tv1"
                android:textColor="@color/black"
                android:textSize="20sp"
                android:layout_marginStart="9dp"
                android:textStyle="bold"/>

            <TextView
                android:id="@+id/tv3"
                android:layout_width="wrap_content"
                android:layout_height="39dp"
                android:text="Author - D.C ALVA"
                android:layout_toEndOf="@id/imgf"
                android:layout_below="@id/tv2"
                android:textColor="@color/black"
                android:textSize="20sp"
                android:layout_marginStart="9dp"
                android:textStyle="bold"/>

            <TextView
                android:id="@+id/tv4"
                android:layout_width="wrap_content"
                android:layout_height="39dp"
                android:text="COST - 235"
                android:layout_toEndOf="@id/imgf"
                android:layout_below="@id/tv3"
                android:textColor="@color/black"
                android:textSize="20sp"
                android:layout_marginStart="9dp"
                android:textStyle="bold"/>


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="ENTER CARD DETAIL - "
            android:layout_below="@id/imgf"
            android:layout_marginTop="20dp"
            android:textSize="15dp"
            android:id="@+id/card1"
            />

            <EditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/imgf"
                android:layout_alignEnd="@+id/card1"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="2dp"
                android:layout_marginEnd="-163dp"
                android:hint="1234"
                android:inputType="number" />

            <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="ENTER CARD CVV - "
            android:layout_below="@+id/card1"
            android:layout_marginTop="20dp"
            android:textSize="15dp"
            android:id="@+id/card2"
            />

            <EditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/card1"
                android:layout_alignEnd="@+id/card2"
                android:layout_marginTop="4dp"
                android:layout_marginEnd="-177dp"
                android:hint="324"
                android:inputType="number" />


            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/card2"
                android:id="@+id/gbuy"
                android:gravity="center"
                android:text="BUY NOW"
                android:layout_marginTop="5dp" />




        </RelativeLayout>
    </androidx.cardview.widget.CardView>